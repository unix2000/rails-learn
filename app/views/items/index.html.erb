<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-striped">
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Email</th>
          <th>Address</th>
        </tr>

        <% @items.each do |i| %>
            <tr>
              <td><%= i.id %></td>
              <td><%= i.name %></td>
              <td><%= i.email %></td>
              <td><%= i.address %></td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="digg_pagination">
    <%= will_paginate @items, :container => false %>
  </div>
 </div>